<div class="container">
  <div class="row">
    <div class="offset-4 mt-4">
      <div class="my-3">
        <label>日記の画像</label><br>
        <%= f.attachment_field :diary_image %>
      </div>
      <div class="my-3">
        <label>ペットを選択</label><br>
        <%= f.collection_select :pet_id, Pet.all, :id, :pet_name, include_blank: "選択して下さい" %>
      </div>
      <div class="my-3">
        <label>タイトル</label><br>
        <%= f.text_field :diary_title %>
      </div>
      <div class="my-3">
        <label>内容</label><br>
        <%= f.text_area :diary_body %>
      </div>
    </div>
  </div>
</div>