<div class="container">
  <div class="row">
    <div class="col-12 mt-4" style="text-align:center;">
      <h2>プロフィール編集</h2>
    </div>
    <div class="offset-4 col-4 mt-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="my-3">
          <%= f.label :image, "プロフィール画像" %><br>
          <%= f.attachment_field :image %>
        </div>
        <div class="my-3">
          <%= f.label :name, "ニックネーム" %><br>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="my-3">
          <%= f.label :introduction, "自己紹介" %><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="text-right">
         <%= f.submit '編集', class:"btn btn-outline-secondary", data: {"turbolinks" => false} %>
         <%= link_to '退会', confirm_users_path, class:"btn btn-outline-secondary", data: {"turbolinks" => false} %>
        </div>
      <% end %>
    </div>
  </div>
</div>