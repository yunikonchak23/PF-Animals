<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content, class:"rounded" %>
    <%= f.select :model, options_for_select({"User" => "user" , "Pet" => "pet" , "Question" => "question"}), class: 'rounded font-italic' %>
    <%= button_tag sanitize('<i class="fa fa-search"></i>'), :type => "submit", :class =>"btn btn-light btn-sm" %>
  <% end %>
</div>