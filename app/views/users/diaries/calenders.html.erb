<div class="container container-size">
  <div class="row">
    <!--左メニュー-->
    <div class="col-2 mt-4">
      <%= render 'users/diaries/menu' %>
    </div>

    <!--カレンダー-->
    <div class="offset-1 col-6 mt-5">
      <h1 style="text-align:center;" class="title-text">カレンダー</h1>
      <%= month_calendar events: @diaries do |date, diaries| %>
        <%= date.day %>

        <% diaries.each do |diary| %>
          <%= link_to diary_path(diary.id), class:"text-link" do %>
            <!--日記の写真-->
            <div class="mt-1">
              <%= attachment_image_tag diary, :diary_image, :fill, 1000, 1000, fallback: "no_image_square.jpg", size: "60x50", class:"new-diary-img" %>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <h1 class="title-text calender-diary-title" style="text-align:center;">日記一覧</h1>
      <!--日記一覧-->
      <div class="diary-table">
        <%= render 'users/diaries/diary_table' %>
        <!--ページネーション-->
        <div class="kaminari"><%= paginate @diaries %></div>
      </div>
    </div>

    <!--右メニュー-->
    <div class="col-3 mt-4">
      <%= render 'layouts/right_menu' %>
    </div>
  </div>
</div>
