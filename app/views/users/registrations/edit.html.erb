<div class="container">
  <div class="row">
    <div>
      <h2>プロフィール編集</h2>
    </div>

    <div>
      <%= form_with model: @user, url: users_path, local:true do |f| %>
        <div>
          <label>プロフィール画像</label>
          <%= f.attachment_field :image %>
        </div>
        <div>
          <label>ニックネーム</label><br>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div>
          <label>自己紹介</label><br>
          <%= f.text_area :introduction %>
        </div>
        <%= f.submit '編集', class:"btn btn-outline-secondary", data: {"turbolinks" => false} %>
      <% end %>
    </div>
  </div>
</div>
