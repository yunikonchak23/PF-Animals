<div class="form-box" style="text-align:center;">
  <h1 class="mb-5">ログイン</h1>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <%= render 'layouts/error_message', model: @user %>

    <div class="form-item mt-5">
      <p class="formLabel">メールアドレス</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text col-4" %>
    </div>

    <div class="form-item mt-5">
      <p class="formLabel">パスワード</p>
      <%= f.password_field :password, autocomplete: "current-password", class:"text col-4" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-item my-5">
        <%= f.check_box :remember_me %>
        <label>次回から自動的にログイン</label>
      </div>
    <% end %>

    <div class="btn-top mt-4 mb-5">
      <%= f.submit "ログイン", class:"log-in-text" %>
    </div>
  <% end %>

  <h4>登録がお済みでない方</h4>
  <div>
    <%= link_to "こちら", new_registration_path(resource_name), class:"device-text" %>
    から新規登録を行って下さい。
  </div>