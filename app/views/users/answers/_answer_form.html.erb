<div class="container">
  <div class="row">
    <div>
      <%= form_with(model:[@question, Answer.new], local: true) do |f| %>
        <div class="my-3">
          <label>回答</label><br>
          <%= f.text_area :answer_body, size: "60x10", class:"col-9" %>
        </div>
        <div class="col-9 mt-4 text-right">
          <%= f.submit '登録', class:"btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>