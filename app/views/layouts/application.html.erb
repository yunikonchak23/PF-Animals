<!DOCTYPE html>
<html>
  <head>
    <title>どうぶつの村</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <%= render 'layouts/header_user' %>
      <% elsif admin_signed_in? %>
        <%= render 'layouts/header_admin' %>
      <% else %>
        <%= render 'layouts/header_logout' %>
      <% end %>
    </header>

    <main>
      <div class="body-bg">
        <% if notice != nil %>
          <h2 class="alert-info" role="alert" style="text-align:center;"><%= notice %></h2>
        <% end %>
        <%= yield %>
      </div>
    </main>

    <footer class="p-3">
        <div class='row'>
          <div class='mx-auto'>
            <p id="page-top">
              <%= link_to "#", class:"top-link", data: {"turbolinks" => false} do %>
                <img src="<%= asset_path('home/top_link.jpg') %>" alt=""><br>
                <span>Page Top</span>
              <% end %>
            </p>
            <small class="mt-3">COPYRIGHT© 2021 どうぶつの村 ALL RIGHTS RESERVED.</small>
          </div>
        </div>
    </footer>
  </body>
</html>
