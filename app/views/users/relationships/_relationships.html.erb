<% if users.exists? %>
  <table class="table table-hover">
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td></td>
          <td><%= attachment_image_tag user, :image, fallback: "no_image_square.jpg", size: "100x100" %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.followings.count%></td>
          <td>フォロワー数:<%= user.followers.count%></td>
          <td><%= link_to"user詳細",user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row">
    <div class="col-12 offset-1">
      ユーザーはいません
    </div>
  </div>
<% end %>