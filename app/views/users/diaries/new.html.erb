<div class="container container-size">
  <div class="row">
    <!--左メニュー-->
    <div class="col-2 mt-4">
      <%= render 'users/diaries/menu' %>
    </div>

    <!--日記のフォーム-->
    <div class="offset-1 col-6 mt-5">
      <h2 style="text-align:center;" class="mb-5 title-text">日記を書く</h2>
      <div>
        <%= form_with model: Diary.new, local:true do |f| %>
          <%= render 'users/diaries/diary_form', f: f %>
          <div class="col-10 mt-4 text-right">
            <%= f.submit '投稿', class:"btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>

    <!--右メニュー-->
    <div class="col-3 mt-4">
      <%= render 'layouts/right_menu' %>
    </div>
  </div>
</div>

