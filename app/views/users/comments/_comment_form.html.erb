<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with(model:[@diary, Comment.new], local: true) do |f| %>
        <div class="my-3">
          <label>コメント</label><br>
          <%= f.text_area :comment, size: "30x4", class:"col-12", placeholder: "コメントをする" %>
        </div>
        <div class="col-12 mt-4 text-right">
          <%= f.submit '送信', class:"btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>